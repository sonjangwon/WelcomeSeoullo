<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jangwon.welcomeseoullo.GuideInfoActivity">

    <LinearLayout
        android:id="@+id/filter"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#FFFFFF"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/categoryLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="#ACACAC"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:background="#FFFFFF"
                android:layout_gravity="center"
                android:text="지역선택  >"
                android:textColor="#000000" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:background="#FFFFFF"
                android:text="분류선택  >"
                android:textColor="#000000" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"/>

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/mapview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="70dp"
        android:background="#ACACAC">

        <TextView
            android:id="@+id/textView1"
            android:layout_weight="1"
            android:gravity="center"
            android:text="현재 위치 기반, 주변 시설 안내"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <FrameLayout
            android:id="@+id/zoonInFrameLayout"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="11dp"
            android:layout_marginRight="11dp"
            android:layout_marginTop="33dp">

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/zoominFloating"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:elevation="10dp"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                app:backgroundTint="#F4F4F4" />

            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_add_black_24dp"
                android:elevation="8dp"
                android:onClick="btnZoomIn"
                android:scaleType="fitXY" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/zoomOutFrameLayout"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignLeft="@+id/zoonInFrameLayout"
            android:layout_alignStart="@+id/zoonInFrameLayout"
            android:layout_below="@+id/zoonInFrameLayout">

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/zoomOutFloating"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:elevation="10dp"
                android:layout_gravity="top|center"
                android:scaleType="fitXY"
                app:backgroundTint="#F4F4F4" />

            <ImageButton
                android:id="@+id/imageButton5"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="7dp"
                android:background="@drawable/ic_remove_black_24dp"
                android:elevation="8dp"
                android:onClick="btnZoomOut"
                android:scaleType="fitXY" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/gpsFrameLayout"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginBottom="31dp"
            android:layout_marginLeft="21dp"
            android:layout_marginStart="21dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/gpsFloating"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:elevation="10dp"
                android:scaleType="fitXY"
                app:backgroundTint="#F4F4F4" />

            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_my_location_black_24dp"
                android:elevation="8dp"
                android:onClick="btnNowLocation"
                android:scaleType="fitXY" />

        </FrameLayout>

    </RelativeLayout>

</RelativeLayout>
