<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false"
    tools:context=".FacilityMenu.GuideInfoFragment">

    <LinearLayout
        android:id="@+id/fragmentCategoryLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center">

        <FrameLayout
            android:layout_width="200dp"
            android:layout_height="30dp" >

            <LinearLayout
                android:id="@+id/listGuideLinearLayout"
                android:layout_width="110dp"
                android:layout_height="30dp"
                android:layout_gravity="right">
                <Button
                    android:id="@+id/listGuideButton"
                    android:layout_width="110dp"
                    android:layout_height="30dp"
                    android:background="@drawable/nonclickbutton"
                    android:text="리스트"
                    android:textColor="#bdbdbd"
                    android:textSize="15dp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/mapGuideLinearLayout"
                android:layout_width="110dp"
                android:layout_height="30dp">
                <Button
                    android:id="@+id/mapGuideButton"
                    android:layout_width="110dp"
                    android:layout_height="30dp"
                    android:background="@drawable/roundbutton"
                    android:text="지도"
                    android:textSize="15dp"/>
            </LinearLayout>
        </FrameLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/publicDataCategoryLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/fragmentCategoryLinearLayout"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:id="@+id/toiletButton"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:text="공공화장실"
            android:textStyle="bold"
            android:textColor="#388E3C"
            android:gravity="center"/>
        <Button
            android:id="@+id/parkinglotButton"
            android:layout_width="0dp"
            android:background="@android:color/transparent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="주차장"
            android:textStyle="bold"
            android:gravity="center"/>
        <Button
            android:id="@+id/parkButton"
            android:layout_width="0dp"
            android:background="@android:color/transparent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="공원"
            android:textStyle="bold"
            android:gravity="center"/>
        <Button
            android:id="@+id/marketButton"
            android:layout_width="0dp"
            android:background="@android:color/transparent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:text="전통시장"
            android:gravity="center"/>
    </LinearLayout>
